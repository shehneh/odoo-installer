# Odoo 19 Demo Instance - Dockerfile
FROM odoo:19

# Install additional Python packages
USER root

# Install Persian fonts and RTL support
RUN apt-get update && apt-get install -y \
    fonts-vazirmatn \
    fonts-noto \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy custom addons (if any)
# COPY ./addons /mnt/extra-addons

# Set ownership
RUN chown -R odoo:odoo /var/lib/odoo

USER odoo

# Expose Odoo port
EXPOSE 8069

# Default command
CMD ["odoo"]
